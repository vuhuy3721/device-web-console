{
    "name": "device-web-console",
    "version": "1.0.0",
    "description": "A web console for device management and monitoring.",
    "main": "src/server/index.ts",
    "scripts": {
        "start": "NODE_OPTIONS=--max-old-space-size=256 ts-node --project tsconfig.ts-node.json src/server/index.ts",
        "dev": "NODE_OPTIONS=--max-old-space-size=256 nodemon --exec 'ts-node --project tsconfig.ts-node.json' src/server/index.ts",
        "dev:watch": "tsc --watch",
        "build": "tsc && npm run copy-assets",
        "build:prod": "tsc && npm run copy-assets && npm prune --production",
        "copy-assets": "cp src/server/config/*.json dist/server/config/ 2>/dev/null || true",
        "deploy:embedded": "bash deploy-embedded.sh",
        "docker:build": "docker build -t device-console:latest .",
        "docker:run": "docker run -p 3000:3000 device-console:latest",
        "test": "jest"
    },
    "dependencies": {
        "@types/mqtt": "^2.5.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.9",
        "mqtt": "^5.14.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.25",
        "@types/jest": "^26.0.0",
        "@types/node": "^14.18.63",
        "jest": "^26.6.0",
        "nodemon": "^3.1.10",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.2"
    },
    "keywords": [
        "device",
        "web console",
        "management",
        "monitoring"
    ],
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    }
}
